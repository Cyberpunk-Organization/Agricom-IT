<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Main column container -->
    <LinearLayout
        android:id="@+id/about_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_us"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_us_text"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvSpecialTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/special_thanks_to"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <!-- Company 1 container -->
        <LinearLayout
            android:id="@+id/EvolutionAnywhere_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/white"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/EvolutionAnywhere_logo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/evolution_anywhere_logo"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/EvolutionAnywhere_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/evolution_desc"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/EvolutionAnywhere_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visit_website"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/blue"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Company 2 container -->
        <LinearLayout
            android:id="@+id/VirtuoCloud_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/white"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/VirtuoCloud_logo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/vc_cloud_logo"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:textColor="@color/black">

                <TextView
                    android:id="@+id/VirtuoCloud_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/virtuocloud_desc"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/VirtuoCloud_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visit_website"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/blue"/>
            </LinearLayout>
        </LinearLayout>

        <!-- How they helped text (kept separate under containers) -->
        <TextView
            android:id="@+id/how_they_helped_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/thank_you_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black"/>

    </LinearLayout>
</ScrollView>
