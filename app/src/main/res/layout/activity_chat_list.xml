<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <!-- Search row: EditText + Start button -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

        <EditText
                android:id="@+id/editSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search Conversation"
                android:inputType="text"
                android:padding="8dp" />

        <Button
                android:id="@+id/btnStartChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start new chat"
                android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
            android:id="@+id/most_recent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Recent"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

    <!-- Main RecyclerView used by ChatListFragment -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerChatLists"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp"/>
</LinearLayout>