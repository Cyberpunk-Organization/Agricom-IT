<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="1080dp"
    android:height="110dp"
    android:viewportWidth="1080"
    android:viewportHeight="200">

    <!-- Background gradient (same tone as login) -->
    <path
        android:pathData="M0,0H1080V200H0Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startY="0"
                android:endY="200"
                android:startColor="#3F9B0B"
                android:endColor="#2AC86F"/>
        </aapt:attr>
    </path>

    <!-- Decorative wave at the bottom -->
    <path
        android:pathData="M0,160 C300,190 780,130 1080,160 L1080,200 L0,200 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startY="100"
                android:endY="200"
                android:startColor="#2AC86F"
                android:endColor="#53E48C"/>
        </aapt:attr>
    </path>
</vector>
